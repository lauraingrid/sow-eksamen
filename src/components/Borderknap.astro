---
import "./../css/generel.css";
---

<article>
  <button><slot /></button>
</article>

<style>
  button {
    background-color: white;
    border: 1px solid #00054E;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 20px;
    padding-right: 20px;
    font-family: "eb";
    border-radius: 25px;
    color: #00054E;
    font-size: 15px;
 
  }

  button:hover {
    background-color: #00054E;
    color: white;
    cursor: pointer;
  }

  @media (min-width: 900px) {
    button {
      font-size: 16px;
    }
  }
</style>