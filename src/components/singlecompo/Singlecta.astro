    padding-bottom: 50px;
  }

  .billede img {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 60%;
  }

  img.mint_musling {
    width: 280px;
    margin-left: 145px;
    padding-top: 4%;
    padding-bottom: 6%;
  }

  .center-button {
    display: flex;
    justify-content: center;
    padding: 30px;
    padding-bottom: 70px;
  }
  @media (min-width: 900px) {
    .grid {
      display: flex;
      flex-direction: row;
    }

    .billede {
      width: 50%;
      align-items: center;
      padding-top: 40px;
    }

    .tekst {
      width: 50%;
    }

    .tekst h3 {
      padding-left: 20px;
      padding-right: 20px;
