---
const { data } = Astro.props;
---

<!-- Dette komponent er til de enkelte billeder i galleriet, hvor den bare henter hvert billede og gør det klikbart til singleview -->
<a href={`/kunde/${data.id}`}>
  <article>
    <img src={"/img/" + data.image} alt="billede af kundes værk" />
  </article>
</a>

<style>
  article {
    width: 100%;
    height: 100%;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: 2px solid #ffffff00;
    transition: 1s ease;
    opacity: 0.88;
    transition: 1s ease;
  }

  img:hover {
    -webkit-transform: scale(1.05);
    -ms-transform: scale(1.05);
    transform: scale(1.05);
    transition: 1s ease;
    border: 5px solid var(--hvid);
    opacity: 1;
    transition: 1s ease;
  }
</style>
