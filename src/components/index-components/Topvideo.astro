  .banner-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      z-index: 0;
      color: #fff;
  }

  .navtext{
    position: absolute;
      top: 5%;
      left: 50%;
