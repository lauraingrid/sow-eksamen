---
import MainLayout from "../layout/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout>
  <Header />
  <section class="tak">
    <div class="taktekst">
      <h4 class="opacity70">Tusind tak!</h4>
      <h2>Vi er så glade for at du har rakt ud til os!</h2>
      <h3 class="opacity70">Vi kontakter dig hurtigst muligt med uddybende information og tilbud</h3>
      <h4 class="opacity50">Indtil da, kan du jo følge med på vores Instagram herunder!</h4>
      <img src="/public/svg/someblaa.svg" alt="hej" />
    </div>
  </section>
  <button onclick="topFunction()" id="scrollToTopBtn" title="Gå til toppen">
    <span class="arrow-up"></span>
</button>
  <Footer />
</MainLayout>

<style>
  .tak {
    background-image: url("/public/svg/baggrundtak.svg");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    height: 100dvh;
    display: grid;
    color: var(--skrift);
  }
  .taktekst {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    padding: 4rem;
    text-align: center;
    place-self: center;
    line-height: 6rem;
    margin: 5rem;
  }

  img {
    width: 40px;
    cursor: pointer;
  }

  .opacity50 {
    opacity: 50%;
  }
  .opacity70 {
    opacity: 70%;
  }

  @media (max-width: 900px) {
    .taktekst {
      line-height: 2rem;
      padding: 3rem;
    }

    h4 {
      margin-bottom: 1rem;
    }
    h2 {
      margin-bottom: 1rem;
    }

    h3 {
      margin-bottom: 1rem;
    }

    img {
      width: 30px;
      cursor: pointer;
    }
  }
</style>

<script>
  import "/public/scripts/scrollknap.js";
</script>
