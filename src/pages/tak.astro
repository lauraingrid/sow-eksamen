---
import MainLayout from "../layout/MainLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<MainLayout>
  <Header />
  <section class="tak">
    <div class="taktekst">
      <h5 class="opacity70">Tusind tak!</h5>
      <h3>Vi er så glade for at du har rakt ud til os!</h3>
      <h4 class="opacity70">Vi kontakter dig hurtigst muligt med uddybende information og tilbud</h4>
      <h5 class="opacity50">Indtil da, kan du jo følge med på vores Instagram herunder!</h5>
      <div class="someicons">
        <a href="https://www.instagram.com/someotherwaves/">
          <ion-icon name="logo-instagram"></ion-icon>
        </a>
      </div>
    </div>
  </section>
  <button onclick="topFunction()" id="scrollToTopBtn" title="Gå til toppen">
    <span class="arrow-up"></span>
  </button>
  <Footer />
</MainLayout>

<style>
 .tak {
    background-image: url("/public/svg/baggrundtak.svg");
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    height: 90dvh;
    display: grid;
    color: var(--skrift);
  }
  .taktekst {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ffffff;
    padding-left: 7rem;
    padding-right: 7rem;
    padding-top: 1rem;
    padding-bottom: 1rem;
    text-align: center;
    place-self: center;
    line-height: 6rem;
  }


  ion-icon {
    color: var(--skrift);
    font-size: 50px;
    padding-top: 20px;
  }

  ion-icon:hover {
    color: #b9cdff;
    cursor: pointer;
  }

  .opacity50 {
    opacity: 50%;
  }
  .opacity70 {
    opacity: 70%;
  }

  @media (max-width: 900px) {
    .taktekst {
      line-height: 2rem;
      padding: 3rem;
    }

    h4 {
      margin-bottom: 1rem;
    }
    h2 {
      margin-bottom: 1rem;
    }

    h3 {
      margin-bottom: 1rem;
    }
  }
</style>

<script>
  import "/public/scripts/scrollknap.js";
</script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
